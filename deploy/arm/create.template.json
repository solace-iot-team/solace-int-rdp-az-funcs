{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "azLocation": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for the Project."
            }
        },
        "projectName": {
            "type": "string",
            "defaultValue": "solace-int-rdp-az-funcs",
            "metadata": {
                "description": "The Project name."
            }
        },
        "blobStorageSKU": {
            "type": "string",
            "defaultValue": "Standard_RAGRS",
            "metadata": {
                "description": "The target blob storage sku."
            },
             "allowedValues": [
                "Standard_LRS",
                "Standard_GRS",
                "Standard_RAGRS",
                "Standard_ZRS",
                "Premium_LRS",
                "Premium_ZRS",
                "Standard_GZRS",
                "Standard_RAGZRS"
            ]
        },
        "blobStorageName": {
            "type": "string",
            "metadata": {
                "description": "The target blob storage name."
            }
        }

    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2019-04-01",
            "name": "solacerdpappstorage",
            "location": "[parameters('azLocation')]",
            "sku": {
                "name": "Standard_RAGRS"
            },
            "kind": "StorageV2",
            "properties": {
                "supportsHttpsTrafficOnly": true,
                 "accessTier": "Hot"
            }
        }
    ],
    "outputs": {}
}
